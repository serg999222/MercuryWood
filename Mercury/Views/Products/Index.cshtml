@model IQueryable<Product>

	<div style="display:flex">
	@foreach (Product product in Model)
	{
		<a > 
			<div style="margin: 15px;">
			<p>@product.Title;</p>
			<p>@product.SubTitle;</p>
			<div>
			  <img class="img-block" src="~/images/@product.TitleImagePath" />
		    </div>
			<p>@product.Price;</p>	
			</div>
		</a>
	}
</div>
